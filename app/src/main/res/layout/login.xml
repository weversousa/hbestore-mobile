<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_tela_inicial"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/text_view_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_text_view_usuario"
        android:layout_marginHorizontal="50dp"/>

    <EditText
        android:id="@+id/edit_text_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Digite seu UsuÃ¡rio"
        android:layout_marginHorizontal="50dp"/>

    <TextView
        android:id="@+id/text_view_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_text_view_senha"
        android:layout_marginHorizontal="50dp" />

    <EditText
        android:id="@+id/edit_text_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Digite sua Senha"
        android:layout_marginHorizontal="50dp"/>

    <CheckBox
            android:text="Lembrar Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkLogin"
            android:layout_marginHorizontal="50dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
            android:id="@+id/button_entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_button_entrar"
            android:layout_marginHorizontal="50dp"
            android:stateListAnimator="@null" />
</LinearLayout>